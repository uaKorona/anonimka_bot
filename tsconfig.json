{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strict": true,
    "module": "NodeNext",
    "target": "es2021",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["handler.ts", "src/**/*"],
  "exclude": ["node_modules"]
}